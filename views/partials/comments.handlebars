<div class="comments">
    <!-- comments are passed as an array so we have to use this instead of the object.property syntax-->
  {{#each this}}
  <section class="comment">
    <div class="meta">
      {{username}} on {{ format_date created_at}}
    </div>
    <div class="text">
      {{comment_text}}
    </div>
  </section>
  {{/each}}
</div>